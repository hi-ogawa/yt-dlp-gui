{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "yt-dlp-gui",
	"version": "0.1.0",
	"identifier": "com.yt-dlp-gui.app",
	"build": {
		"beforeDevCommand": "pnpm vite dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "pnpm vite build",
		"frontendDist": "../dist"
	},
	"app": {
		"withGlobalTauri": true,
		"windows": [
			{
				"title": "yt-dlp-gui",
				"width": 650,
				"height": 650
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"externalBin": [
			"binaries/yt-dlp"
		],
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"linux": {
			"appimage": {
				"bundleMediaFramework": true
			}
		}
	}
}
